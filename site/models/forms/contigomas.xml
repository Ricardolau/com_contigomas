<?xml version="1.0" encoding="UTF-8"?>
<!-- AÃ±adimos los campo queremos mostrar en la vista de codigorecibo
	que la vista entrada de datos -->
<form>
	<fieldset name="registro" label="COM_CONTIGOMAS_FORM_LABEL">
		
		<field name="nombre"
			type="text"
			label="COM_CONTIGOMAS_FIELD_NOMBRE_LABEL"
			description="COM_CONTIGOMAS_FIELD_NOMBRE_DESC"
			size="30"
			required="true"
		 />
		<field name="apellido1"
			type="text"
			label="COM_CONTIGOMAS_FIELD_APELLIDO1_LABEL"
			description="COM_CONTIGOMAS_FIELD_APELLIDO1_DESC"
			size="30"
			required="true"
		/>

		<field name="apellido2"
			type="text"
			label="COM_CONTIGOMAS_FIELD_APELLIDO2_LABEL"
			description="COM_CONTIGOMAS_FIELD_APELLIDO2_DESC"
			size="30"
		/>
         <field name="telefono"
			type="text"
			label="COM_CONTIGOMAS_FIELD_TELEFONO_LABEL"
			description="COM_CONTIGOMAS_FIELD_TELEFONO_DESC"
			size="30"
			required="true"
            pattern="[0-9]{9}"
		/>
        <field name="email"
			type="email"
			label="COM_CONTIGOMAS_FIELD_EMAIL_LABEL"
			description="COM_CONTIGOMAS_FIELD_EMAIL_DESC"
			size="30"
			required="true"
		/>
    </fieldset>
  	<fieldset name="direccion" label="COM_CONTIGOMAS_FORM_LABEL">
        <field name="regalo"
            type="list"
			label="COM_CONTIGOMAS_FIELD_REGALO_LABEL"
			description="COM_CONTIGOMAS_FIELD_REGALO_LABEL"
			default="0"
            class="regalo"
			>
                <option value="2">COM_CONTIGOMAS_FIELD_REGALO_OPTION2</option>
                <option value="1">COM_CONTIGOMAS_FIELD_REGALO_OPTION1</option>
				<option value="0">COM_CONTIGOMAS_FIELD_REGALO_OPTION0</option>
        </field>
        <field
            type="spacer"
            name="myspacer"
            class="text"
            label="COM_CONTIGOMAS_FIELD_SEPARADOR_REGALO_OPTION"
        />
        <field name="calle"
			type="text"
			label="COM_CONTIGOMAS_FIELD_CALLE_LABEL"
			description="COM_CONTIGOMAS_FIELD_CALLE_DESC"
			size="30"
			required="true"
		/>
        <field name="numero"
			type="text"
			label="COM_CONTIGOMAS_FIELD_NUMERO_LABEL"
			description="COM_CONTIGOMAS_FIELD_NUMERO_DESC"
			size="30"
			required="true"
		/>
        <field name="piso"
			type="text"
			label="COM_CONTIGOMAS_FIELD_PISO_LABEL"
			description="COM_CONTIGOMAS_FIELD_PISO_DESC"
			size="30"
			required="true"
		/>
        <field name="codigoPostal"
			type="text"
			label="COM_CONTIGOMAS_FIELD_CODIGOPOSTAL_LABEL"
			description="COM_CONTIGOMAS_FIELD_CODIGOPOSTAL_DESC"
			size="30"
			required="true"
		/>
        <field name="municipio"
			type="text"
			label="COM_CONTIGOMAS_FIELD_MUNICIPIO_LABEL"
			description="COM_CONTIGOMAS_FIELD_MUNICIPIO_DESC"
			size="30"
			required="true"
		/>
        <field name="provincia"
			type="text"
			label="COM_CONTIGOMAS_FIELD_PROVINCIA_LABEL"
			description="COM_CONTIGOMAS_FIELD_PROVINCIA_DESC"
			size="30"
			required="true"
		/>
		<field name="terminos"
			type="checkbox"
			label="COM_CONTIGOMAS_FIELD_TERMINOS_LABEL"
			description="COM_CONTIGOMAS_FIELD_TERMINOS_DESC"
			size="30"
			required="true"
		/>
		<field name="base"
			type="checkbox"
			label="COM_CONTIGOMAS_FIELD_BASE_LABEL"
			description="COM_CONTIGOMAS_BASE_TERMINOS_DESC"
			size="30"
			required="true"
		/>

	</fieldset>
</form>

